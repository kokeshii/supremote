{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "type":"object",
   "properties":{
      "fields":{
         "$ref":"#/definitions/field-list"
      }
   },
   "definitions":{
      "field-list":{
         "patternProperties":{
            "^[\\w_-]+$":{
               "type":"object",
               "oneOf":[
                  {
                     "$ref":"#/definitions/text-entry"
                  },
                  {
                     "$ref":"#/definitions/number-entry"
                  },
                  {
                     "$ref":"#/definitions/boolean-entry"
                  },
                  {
                     "$ref":"#/definitions/multiple-entry"
                  },
                  {
                     "$ref":"#/definitions/action-entry"
                  }
               ]
            }
         }
      },
      "description":{
         "type":"string"
      },
      "title":{
         "type":"string"
      },
      "text-entry":{
         "properties":{
            "type":{
               "enum":[
                  "text"
               ]
            },
            "description":{
               "$ref":"#/definitions/description"
            },
            "title":{
               "$ref":"#/definitions/title"
            },
            "maxLength":{
               "type":"number"
            },
            "default": {
               "type": "string"
            }
         },
         "additionalProperties":false,
         "required":[
            "type",
            "description",
            "title",
            "maxLength",
            "default"
         ]
      },
      "number-entry":{
         "properties":{
            "type":{
               "enum":[
                  "number"
               ]
            },
            "description":{
               "$ref":"#/definitions/description"
            },
            "title":{
               "$ref":"#/definitions/title"
            },
            "range":{
               "type":"array",
               "minItems":2,
               "maxItems":2,
               "items":{
                  "type":"number"
               },
               "uniqueItems":true
            },
            "default": {
               "type": "number"
            }
         },
         "additionalProperties":false,
         "required":[
            "type",
            "description",
            "title",
            "range",
            "default"
         ]
      },
      "boolean-entry":{
         "properties":{
            "type":{
               "enum":[
                  "boolean"
               ]
            },
            "description":{
               "$ref":"#/definitions/description"
            },
            "title":{
               "$ref":"#/definitions/title"
            },
            "default":{
               "type":"boolean"
            }
         },
         "additionalProperties":false,
         "required":[
            "type",
            "description",
            "title",
            "default"
         ]
      },
      "multiple-entry":{
         "properties":{
            "type":{
               "enum":[
                  "multiple"
               ]
            },
            "description":{
               "$ref":"#/definitions/description"
            },
            "title":{
               "$ref":"#/definitions/title"
            },
            "choices":{
               "type":"array",
               "minItems":1,
               "maxItems":32,
               "items":{
                  "type":"string"
               }
            },
            "default": {
               "type": "string"
            }
         },
         "additionalProperties":false,
         "required":[
            "type",
            "description",
            "title",
            "choices",
            "default"
         ]
      },
      "action-entry":{
         "properties":{
            "type":{
               "enum":[
                  "action"
               ]
            },
            "description":{
               "$ref":"#/definitions/description"
            },
            "title":{
               "$ref":"#/definitions/title"
            },
            "throttle":{
               "type":"number"
            },
            "endpoint": {
               "format": "uri"
            },
            "class": {
               "enum":[
                  "default",
                  "primary",
                  "success",
                  "info",
                  "warning",
                  "danger"
               ]
            }
         },
         "additionalProperties":false,
         "required":[
            "type",
            "description",
            "title",
            "throttle",
            "class",
            "endpoint"
         ]
      }
   },
   "additionalProperties":false
}