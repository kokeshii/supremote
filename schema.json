{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",

	"properties": {
		"fields": { "$ref": "#/definitions/field-list" }
	},

	

	"definitions": {

		"field-list": {
			"patternProperties": {
				"^[\\w_-]+$": {
		  		"type": "object",
				"oneOf": [
					{ "$ref": "#/definitions/text-entry" },
					{ "$ref": "#/definitions/number-entry" },
					{ "$ref": "#/definitions/boolean-entry" },
					{ "$ref": "#/definitions/multiple-entry" },
					{ "$ref": "#/definitions/action-entry" }
		  			]
				}
			}
		},

		"description": {
			"type": "string"
		},

		"text-entry": {
			"properties": {
				"type": { "enum": ["text"] },
				"description": { "$ref": "#/definitions/description" },
				"max-length": {
					"type": "number"
				}
			},
			"additionalProperties": false,
			"required": ["type", "description", "max-length"]
		},

		"number-entry": {
			"properties": {
				"type": { "enum": ["number"] },
				"description": { "$ref": "#/definitions/description" },
				"range": {
					"type": "array",
					"minItems": 2,
					"maxItems": 2,
					"items": { "type": "number" },
					"uniqueItems": true
				}
			},
			"additionalProperties": false,
			"required": ["type", "description", "range"]
		},

		"boolean-entry": {
			"properties": {
				"type": { "enum": ["boolean"] },
				"description": { "$ref": "#/definitions/description" },
				"default": { "type": "boolean" }
			},
			"additionalProperties": false,
			"required": ["type", "description", "default"]
		},

		"multiple-entry": {
			"properties": {
				"type": { "enum": ["multiple"] },
				"description": { "$ref": "#/definitions/description" },
				"choices": {
					"type": "array",
					"minItems": 1,
					"maxItems": 32,
					"items": {
						"type": "string"
					}
				}
			},
			"additionalProperties": false,
			"required": ["type", "description", "choices"]
		},

		"action-entry": {
			"properties": {
				"type": { "enum": ["action"] },
				"description": { "$ref": "#/definitions/description" },
				"throttle": {
					"type": "number"
				}
			},
			"additionalProperties": false,
			"required": ["type", "description", "throttle"]
		}

	},

	"additionalProperties": false
}